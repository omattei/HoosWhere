<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
 <item android:state_pressed="true" >
     <shape android:shape="oval"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#3b5999" />
         <gradient android:angle="-90" android:startColor="#DC983F" android:endColor="#DC983F"  />            
     </shape>
 </item>
<item android:state_focused="true">
     <shape android:shape="oval"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#D88D2A" />
         <solid android:color="#D88D2A"/>       
     </shape>
 </item>  
<item >
    <shape android:shape="oval"  >
         <corners android:radius="3dip" />
         <stroke android:width="1dip" android:color="#D88D2A" />
         <gradient android:angle="-90" android:startColor="#D88D2A" android:endColor="#D88D2A" />            
     </shape>
 </item>
</selector>